extends layout

block content
    .container
        h1 Password Reset
        br
        p(id='status')
        form(role='form', action="/resetPassword",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(id='password',type='password', required, autofocus, name="password", placeholder='Enter New Password')
                i.form-control-feedback(data-fv-icon-for="password", style="display: none;")
            .form-group
                input.form-control(id='confirmPassword', type='password', required, name="confirmPassword", placeholder='Password')
                i.form-control-feedback(data-fv-icon-for="confirmPassword", style="display: none;")
                input(type='hidden', name ='resetcode', id='resetcode', required, value=requestCode.ResetCode)
            button.btn.btn-default(type='submit') Submit
            br
            a(href='/')
                button.btn.btn-primary(type="button") Cancel
block postScripts
    script(src='/js/passwordReset.js')