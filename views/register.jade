extends layout

block content
    .container
        h1 Register Page
        p.lead Say something worthwhile here.
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='email', name="username", required, autofocus, placeholder='Enter Email Address')
            .form-group
                input.form-control(type='password', name="password", required, placeholder='Password')
            button.btn.btn-default(type='submit') Submit
            input(type='hidden', name ='invitecode', id='invitecode', required, value=InviteCode)
            br
            a(href='/')
                button.btn.btn-primary(type="button") Cancel
block postScripts
    script(src='./javascripts/register.js')
